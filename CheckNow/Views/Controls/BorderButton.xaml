<Button x:Class="CheckNow.Views.Controls.BorderButton"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d" Name="main"
        d:DesignHeight="450" d:DesignWidth="800">
    <Button.Style>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Button.Style>

    <Border BorderThickness="{Binding ElementName=main, Path=BorderThickness}"
            BorderBrush="{Binding ElementName=main, Path=BorderBrush}"
            CornerRadius="{Binding ElementName=main, Path=CornerRadius}"
            Width="52"
            Height="52"
            Name="border">
        <ContentPresenter/>
    </Border>
</Button>
